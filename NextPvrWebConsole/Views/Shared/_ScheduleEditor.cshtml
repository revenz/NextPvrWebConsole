@{
    //ViewBag.RecordingDirectories = NextPvrWebConsole.Models.RecordingDirectory.LoadForUser(ViewBag.UserOid, true);
}

<div class="modal hide fade" id="recording-options">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{recording.Title}}</h3>
    </div>
    <div class="modal-body">
        <table>
            <tr class="channelName">
                <td class="label" data-lang="Channel"></td>
                <td class="value">{{recording.ChannelName}}</td>
            </tr>
            <tr>
                <td class="label" data-lang="Recording Type"></td>
                <td class="value">
                    <select id="recording-type" ng-model="recording.RecordingType">
                        <option value="1" data-lang="Record_Once"></option>
                        <option value="2" data-lang="Record_Season_New"></option>
                        <option value="3" data-lang="Record_Seaon_All"></option>
                        <option value="4" data-lang="Record_Season_Daily"></option>
                        <option value="5" data-lang="Record_Season_Weekly"></option>
                        <option value="6" data-lang="Record_Season_Mon_To_Fri"></option>
                        <option value="7" data-lang="Record_Season_Weekends"></option>
                        <option value="8" data-lang="Record_All_Eps_All_Chs"></option>
                    </select>
                </td>
            </tr>

            <tr>
                <td class="label" data-lang="PrePadding"></td>
                <td class="value"><input type="number" min="0" max="89" id="recording-prepadding" ng-model="recording.PrePadding" /> (<span data-lang="Minutes"></span>)</td>
            </tr>

            <tr>
                <td class="label" data-lang="PostPadding"></td>
                <td class="value"><input type="number" min="0" max="89" id="recording-postpadding" ng-model="recording.PostPadding" /> (<span data-lang="Minutes"></span>)</td>
            </tr>

            <tr>
                <td class="label" data-lang="RecordingDirectory"></td>
                <td class="value">
                    <select id="recording-directory" ng-model="recording.RecordingDirectoryId">
                        <option ng-repeat="dir in recordingDirectories" ng-value="dir.Id">{{dir.Name}}</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td class="label" data-lang="Keep"></td>
                <td class="value">
                    <select id="recording-keep" ng-model="recording.Keep">
                        <option value="0" data-lang="All Recordings"></option>
                        @for (int i = 1; i < 29; i++)
                        {
                            <option value="@i">@i <span data-lang="@(i == 1 ? "RecordingSingle" : "RecordingPlural")" /></option>
                        }
                    </select>
                </td>
            </tr>
        </table>
    </div>    
    <div class="modal-footer">
        <a href="" class="btn btn-primary">Save</a>
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Close</a>
    </div>
</div>