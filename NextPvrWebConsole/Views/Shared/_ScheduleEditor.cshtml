@{
    //ViewBag.RecordingDirectories = NextPvrWebConsole.Models.RecordingDirectory.LoadForUser(ViewBag.UserOid, true);
}

<div class="modal hide" id="recording-options">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{scheduleEditorRecording.Title}}</h3>
    </div>
    <div class="modal-body">
        <table>
            <tr class="channelName">
                <td><label data-lang="Channel"></label></td>
                <td>{{scheduleEditorRecording.ChannelName}}</td>
            </tr>
            <tr>
                <td><label for="recording-type" data-lang="Recording Type"></label></td>
                <td>
                    <select id="recording-type" ng-model="scheduleEditorRecording.Type">
                        <option value="1" data-lang="Record_Once"></option>
                        <option value="2" data-lang="Record_Season_New"></option>
                        <option value="3" data-lang="Record_Seaon_All"></option>
                        <option value="4" data-lang="Record_Season_Daily"></option>
                        <option value="5" data-lang="Record_Season_Weekly"></option>
                        <option value="6" data-lang="Record_Season_Mon_To_Fri"></option>
                        <option value="7" data-lang="Record_Season_Weekends"></option>
                        <option value="8" data-lang="Record_All_Eps_All_Chs"></option>
                    </select>
                </td>
            </tr>

            <tr>
                <td><label for="recording-prepadding" data-lang="PrePadding"></label></td>
                <td><input type="number" min="0" max="89" id="recording-prepadding" ng-model="scheduleEditorRecording.PrePadding" /> <span class="help-inline" data-lang="(Minutes)"></span></td>
            </tr>

            <tr>
                <td><label for="recording-postpadding" data-lang="PostPadding"></label></td>
                <td><input type="number" min="0" max="89" id="recording-postpadding" ng-model="scheduleEditorRecording.PostPadding" /> <span class="help-inline" data-lang="(Minutes)"></span></td>
            </tr>

            <tr>
                <td><label for="recording-directory" data-lang="RecordingDirectory"></label></td>
                <td>
                    <select id="recording-directory" ng-model="scheduleEditorRecording.RecordingDirectoryId" ng-options="rd.RecordingDirectoryId as rd.DisplayName for rd in recordingDirectories">
                    </select>
                </td>
            </tr>

            <tr>
                <td><label for="recording-keep" data-lang="Keep"></label></td>
                <td>
                    <select id="recording-keep" ng-model="scheduleEditorRecording.NumberToKeep">
                        <option value="0" data-lang="All Recordings"></option>
                        @for (int i = 1; i < 29; i++)
                        {
                            <option value="@i">@i <span data-lang="@(i == 1 ? "RecordingSingle" : "RecordingPlural")" /></option>
                        }
                    </select>
                </td>
            </tr>
        </table>
    </div>    
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn btn-primary" ng-click="saveScheduleEditor()">Save</a>
        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Close</a>
    </div>
</div>