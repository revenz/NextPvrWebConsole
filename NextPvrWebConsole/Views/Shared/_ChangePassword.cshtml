@{
    var model = new NextPvrWebConsole.Models.LocalPasswordModel();       
}
@using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions() { HttpMethod = "POST", OnComplete = "ChangePassword_OnComplete" }, new { id = "changePasswordForm" }))
{
<div class="modal hide" id="modalChangePassword">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 data-lang="Change Password"></h3>
    </div>
    <div class="modal-body">
        <table>
            <tr>
                <td class="label" data-lang="Current Password"></td>
                <td class="value">
                    @Html.EditorFor(m => model.OldPassword)
                    @Html.ValidationMessageFor(m => model.OldPassword)
                </td>
            </tr>
            <tr>
                <td class="label" data-lang="New Password"></td>
                <td class="value">
                    @Html.EditorFor(m => model.NewPassword)
                    @Html.ValidationMessageFor(m => model.NewPassword)
                </td>
            </tr>
            <tr>
                <td class="label" data-lang="Confirm Password"></td>
                <td class="value">
                    @Html.EditorFor(m => model.ConfirmPassword)
                    @Html.ValidationMessageFor(m => model.ConfirmPassword)
                </td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</div>
}