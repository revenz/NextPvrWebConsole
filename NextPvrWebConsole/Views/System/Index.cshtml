@{
    ViewBag.Title = "System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Styles.Render("~/Content/system/css")
}


<div class="system vtab-container">

    <ul class="vtab-buttons">
        <li class="general first selected" data-tab="general"><i class="icon icon-wrench"></i><span data-lang="General" /></li>
        <li class="smtp" data-tab="smtp"><i class="icon icon-envelope"></i><span data-lang="SMTP Settings" /></li>        
        <li class="users" data-tab="users"><i class="icon icon-group"></i><span data-lang="Users" /></li>
        <li class="logs" data-tab="logs"><i class="icon icon-file"></i><span data-lang="Logs" /></li>
        <li class="about last" data-tab="about"><i class="icon icon-info-sign"></i><span data-lang="About" /></li>
    </ul>

    <div class="vtab-content selected" id="system-tab-general">
        @Html.Partial("_General")
    </div>

    <div class="vtab-content" id="system-tab-smtp">
        @Html.Partial("_SmtpSettings")
    </div>

    <div class="vtab-content" id="system-tab-users">
        @Html.Partial("_Users")
    </div>
    
    <div class="vtab-content" id="system-tab-logs">
        @Html.Partial("_Logs")
    </div>
    
    <div class="vtab-content" id="system-tab-about">
        @Html.Partial("_About")
    </div>

</div>


@section Scripts{
    @Scripts.Render("~/Scripts/system/js")
}