@{
    var generalModel = (NextPvrWebConsole.Models.ConfigurationModels.GeneralSystem)ViewBag.GeneralModel;
}

<form id="frmSystemGeneral" ng-controller="Controllers.System.GeneralController">

    
    <p data-lang="System-General-Summary"></p>

    <table>
        <tr>
            <td>@Html.LabelFor(m => generalModel.WebsiteAddress, new { data_lang="Website Address"})</</td>
            <td class="value">
                @Html.EditorFor(m => generalModel.WebsiteAddress)
                @Html.ValidationMessageFor(m => generalModel.WebsiteAddress)
                <span class="description" data-lang="System-General-WebsiteAddress-Description" />
            </td>
        </tr>
        <tr>
            <td class="label"></td>
            <td class="value">
                <button ng-click="save()" class="btn btn-primary">
                    <i class="icon-ok-sign icon-white"/> <span data-lang="Save"></span>
                </button>
            </td>

        </tr>
    </table>

</form>