@{
    Layout = null;
}

<div class="modal hide" ng-controller="Controllers.Configuration.ChannelSelectorController">
    <div class="modal-header">
        <button type="button" class="close" aria-hidden="true">&times;</button>
        <h3>Channel Selector</h3>
    </div>
    <div class="modal-body">
        <ul>
            <li ng-repeat="item in model.items">
                <label>
                    <input type="checkbox" ng-model="item.Active" />
                    {{item.Name}}
                </label>
            </li>
        </ul>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="ok()">OK</button>
        <button class="btn" ng-click="cancel()">Close</button>
    </div>
</div>