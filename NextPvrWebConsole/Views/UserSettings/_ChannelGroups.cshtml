<p data-lang="UserSettings-ChannelGroups-Summary"></p>

<div ng-controller="Controllers.UserSettings.ChannelGroupsController">

    <ul ng-sortable="channelgroups" data-handle=".handle" id="channelgrouplist">
        <li ng-sortable-index="{{$index}}" ng-repeat="group in channelgroups" ng-class="{shared: group.IsShared, personal: !group.IsShared }">
            <span class="handle"><i class="icon-move"></i></span>
            <span class="name">{{group.Name}}</span>
            <div class="controls">
                <button class="btn btn-small" ng-click="edit(group)" ng-show="!group.IsShared">
                    <i class="icon-edit"></i>Edit
                </button>
                <button class="btn btn-small btn-white btn-danger" ng-click="remove(group)" ng-show="!group.IsShared">
                    <i class="icon-remove icon-white"></i>Remove
                </button>
                <toggle-box ng-model="group.Enabled"></toggle-box>
            </div>
        </li>
    </ul>

    <p class="buttons">
        <button class="btn" ng-click="add()">
            <i class="icon-plus" /> Create Channel Group
        </button>
        <button class="btn btn-primary" ng-click="save()">
            <i class="icon-ok-sign icon-white" /> Save
        </button>
    </p>

    <div id="channel-group-editor" class="modal hide">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Channel Group Editor header</h3>
        </div>
        <div class="modal-body">
            <table>
                <tr>
                    <td>Name</td>
                    <td><input type="text" required ng-model="selected.Name" /></td>
                </tr>
                <tr>
                    <td>Channels</td>
                    <td>
                        <ul>
                            <li ng-repeat="channel in selected.Channels">
                                <label>
                                    <input type="checkbox" ng-model="channel.Enabled" />
                                    {{channel.Name}}
                                </label>
                            </li>
                        </ul>

                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" ng-click="updateGroup()">OK</button>
        </div>
    </div>
</div>